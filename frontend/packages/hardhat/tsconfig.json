{
  "compilerOptions": {

    "types": ["hardhat/types/runtime", "hardhat/types/config"],

    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./deploy/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "cache",
    "typechain-types"
  ]
}